<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <View
        android:id="@+id/view"
        android:layout_width="410dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/foodNm"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:layout_marginTop="12dp"
        android:text="名稱"
        android:textColor="#FFFFFF"
        android:textSize="70px"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.273"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/foodCal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginLeft="84dp"
        android:text="熱量"
        android:textColor="@color/yellow"
        android:textSize="55px"
        app:layout_constraintBottom_toBottomOf="@+id/foodNm"
        app:layout_constraintStart_toEndOf="@+id/foodNm"
        app:layout_constraintTop_toTopOf="@+id/foodNm"
        app:layout_constraintVertical_bias="0.571" />

    <TextView
        android:id="@+id/cal3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kcal"
        android:textColor="@color/yellow"
        android:textSize="40px"
        app:layout_constraintBottom_toBottomOf="@+id/foodCal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.017"
        app:layout_constraintStart_toEndOf="@+id/foodCal"
        app:layout_constraintTop_toTopOf="@+id/foodCal"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/dollar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:textColor="#FFFFFF"
        android:textSize="55px"
        app:layout_constraintBottom_toBottomOf="@+id/foodPrice"
        app:layout_constraintEnd_toStartOf="@+id/foodPrice"
        app:layout_constraintHorizontal_bias="0.681"
        app:layout_constraintStart_toEndOf="@+id/foodNm"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/foodPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="價格"
        android:textColor="#FFFFFF"
        android:textSize="55px"
        app:layout_constraintBottom_toBottomOf="@+id/foodNm"
        app:layout_constraintEnd_toStartOf="@+id/foodCal"
        app:layout_constraintHorizontal_bias="0.586"
        app:layout_constraintStart_toEndOf="@+id/foodNm"
        app:layout_constraintTop_toTopOf="@+id/foodNm"
        app:layout_constraintVertical_bias="0.428" />

    <TextView
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text=">"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/cal3"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/cal3"
        app:layout_constraintVertical_bias="0.666" />

    <Button
        android:id="@+id/delBt"
        android:layout_width="33dp"
        android:layout_height="31dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:text="刪除"
        app:layout_constraintBottom_toBottomOf="@+id/foodNm"
        app:layout_constraintEnd_toStartOf="@+id/foodNm"
        app:layout_constraintTop_toTopOf="@+id/foodNm"
        app:layout_constraintVertical_bias="0.6" />

