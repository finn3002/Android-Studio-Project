<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view2"
        android:layout_width="451dp"
        android:layout_height="676dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.057" />

    <TextView
        android:id="@+id/back"
        android:layout_width="449dp"
        android:layout_height="665dp"
        android:background="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.045" />

    <TextView
        android:id="@+id/word"
        android:layout_width="376dp"
        android:layout_height="198dp"
        android:layout_marginTop="60dp"
        android:background="@color/darkblue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/back" />

    <Button
        android:id="@+id/additem"
        android:layout_width="110dp"
        android:layout_height="28dp"
        android:layout_marginTop="184dp"
        android:background="@drawable/loginbar"
        android:text="新增"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/word" />
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="185dp"
        android:layout_height="195dp"

        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="@+id/dollor"
        app:layout_constraintHorizontal_bias="0.108"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/back">

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_width="match_parent"
            android:layout_height="193dp"
            android:layout_marginTop="-25dp">

        </com.github.mikephil.charting.charts.PieChart>
    </LinearLayout>

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="總攝取熱量"
        android:textColor="#FFFFFF"
        android:textSize="55px"
        app:layout_constraintEnd_toEndOf="@+id/word"
        app:layout_constraintHorizontal_bias="0.602"
        app:layout_constraintStart_toStartOf="@+id/word"
        app:layout_constraintTop_toTopOf="@+id/word" />
    <TextView
        android:id="@+id/remaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:text="剩餘熱量"
        android:textColor="#FFFFFF"
        android:textSize="55px"
        app:layout_constraintEnd_toEndOf="@+id/word"
        app:layout_constraintHorizontal_bias="0.623"
        app:layout_constraintStart_toStartOf="@+id/word"
        app:layout_constraintTop_toTopOf="@+id/word" />
    <TextView
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="136dp"
        android:text="金額"
        android:textColor="#FFFFFF"
        android:textSize="55px"
        app:layout_constraintEnd_toEndOf="@+id/word"
        app:layout_constraintHorizontal_bias="0.655"
        app:layout_constraintStart_toStartOf="@+id/word"
        app:layout_constraintTop_toTopOf="@+id/word" />
    <TextView
        android:id="@+id/totalresult"
        android:layout_width="64dp"
        android:layout_height="21dp"
        android:layout_marginTop="40dp"
        android:textColor="#FFFFFF"
        android:textSize="50px"
        app:layout_constraintEnd_toEndOf="@+id/word"
        app:layout_constraintHorizontal_bias="0.944"
        app:layout_constraintStart_toEndOf="@+id/total"
        app:layout_constraintTop_toTopOf="@+id/word" />
    <TextView
        android:id="@+id/remainingresult"
        android:layout_width="64dp"
        android:layout_height="21dp"
        android:layout_marginTop="84dp"
        android:textColor="#FFFFFF"
        android:textSize="50px"
        app:layout_constraintEnd_toEndOf="@+id/word"
        app:layout_constraintHorizontal_bias="0.351"
        app:layout_constraintStart_toEndOf="@+id/total"
        app:layout_constraintTop_toTopOf="@+id/word" />

    <TextView
        android:id="@+id/moneyresult"
        android:layout_width="64dp"
        android:layout_height="21dp"
        android:layout_marginTop="136dp"
        android:textColor="#FFFFFF"
        android:textSize="50px"
        app:layout_constraintEnd_toEndOf="@+id/word"
        app:layout_constraintHorizontal_bias="0.388"
        app:layout_constraintStart_toEndOf="@+id/total"
        app:layout_constraintTop_toTopOf="@+id/word" />
    <TextView
        android:id="@+id/cal"
        android:layout_width="33dp"
        android:layout_height="21dp"
        android:layout_marginTop="40dp"
        android:text="kcal"
        android:textColor="#FFFFFF"
        android:textSize="40px"
        app:layout_constraintEnd_toEndOf="@+id/word"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/totalresult"
        app:layout_constraintTop_toTopOf="@+id/word" />
    <TextView
        android:id="@+id/cal2"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:layout_marginTop="84dp"
        android:text="kcal"
        android:textColor="#FFFFFF"
        android:textSize="40px"
        app:layout_constraintEnd_toEndOf="@+id/word"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/totalresult"
        app:layout_constraintTop_toTopOf="@+id/word" />
    <TextView
        android:id="@+id/dollor"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:layout_marginTop="136dp"
        android:text="元"
        android:textColor="#FFFFFF"
        android:textSize="40px"
        app:layout_constraintEnd_toEndOf="@+id/word"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/totalresult"
        app:layout_constraintTop_toTopOf="@+id/word" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="375dp"
        android:layout_height="328dp"
        android:layout_marginTop="32dp"
        android:background="@color/darkblue"
        app:layout_constraintEnd_toEndOf="@+id/cal2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/word"
        app:layout_constraintTop_toBottomOf="@+id/word"
        />

    <TextView
        android:id="@+id/dateNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="2020/09/23"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/word"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>