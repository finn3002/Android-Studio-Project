<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment3">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="737dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="-10px"
        app:srcCompat="@drawable/background" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="432dp"
        android:layout_height="511dp"
        android:layout_marginTop="52dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_width="346dp"
            android:layout_height="295dp"
            android:layout_marginLeft="70px"
            android:layout_marginTop="100px">

        </com.github.mikephil.charting.charts.PieChart>



    </LinearLayout>



    <ImageView
        android:id="@+id/carbon_analysis"
        android:layout_width="340dp"
        android:layout_height="99dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="380dp"
        android:src="@drawable/carbon_analysis" />

    <ImageView
        android:id="@+id/portein_analysis"
        android:layout_width="340dp"
        android:layout_height="99dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="460dp"
        android:src="@drawable/portein_analysis" />

    <ImageView
        android:id="@+id/fat_analysis"
        android:layout_width="340dp"
        android:layout_height="99dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="540dp"
        android:src="@drawable/fat_analysis" />

    <ImageView
        android:id="@+id/carbonanalysis"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="400dp"
        android:layout_weight="1"
        android:src="@drawable/carbonchinese1"

        />

    <ImageView
        android:id="@+id/portineanalysis"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="50dp"
        android:src="@drawable/porteinchinese"
 />

    <ImageView
        android:id="@+id/fatanalysis"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:layout_marginTop="560.5dp"
        android:layout_marginLeft="50dp"
        android:src="@drawable/fatchinese"
 />

    <TextView
        android:id="@+id/carbon_number"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="410dp"
        android:text="300 g"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/portine_number"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="490dp"
        android:layout_marginLeft="300dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  35 g" />

    <TextView
        android:id="@+id/fat_number"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="570dp"
        android:layout_marginLeft="300dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  40 g" />

</FrameLayout>